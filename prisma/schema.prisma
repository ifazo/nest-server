generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  seller
  buyer
}

enum OrderStatus {
  pending
  processing
  shipped
  delivered
  cancelled
}

model User {
  id       String   @id @default(uuid())
  name     String
  image    String?
  email    String   @unique
  password String
  role     Role @default(buyer)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reviews Review[]
  orders  Order[]

  @@map("users")
}

model Category {
  id          String @id @default(uuid())
  name        String @unique
  image       String
  description String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  products Product[]

  @@map("categories")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  image       String
  description String
  price       Float
  rating      Float
  stock       Int
  categoryId  String   @map("category_id")
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  reviews   Review[]

  @@map("products")
}

model Review {
  id        String  @id @default(uuid())
  rating    Float
  review    String
  userId    String  @map("user_id")
  user      User    @relation(fields: [userId], references: [id])
  productId String  @map("product_id")
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("reviews")
}

model Order {
  id        String      @id @default(uuid())
  products  Json[]
  total     Float
  userId    String      @map("user_id")
  user      User        @relation(fields: [userId], references: [id])
  sessionId String      @map("session_id")
  status    OrderStatus @default(pending)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("orders")
}